import tkinter as tk
from tkinter import messagebox

# 1. Define the action (command) for the button
def show_greeting():
    # Get the text entered by the user
    user_input = entry_name.get()

    if user_input:
        # Show a pop-up message box
        messagebox.showinfo("Greeting", f"Hello, {user_input}! Welcome to the Python UI.")
    else:
        messagebox.showwarning("Warning", "Please enter your name.")
# ---

# 2. Initialize the main window (Root)
root = tk.Tk()
root.title("Simple Python UI")
root.geometry("400x200") # Set the window size (width x height)

# 3. Create Widgets

# Label
label_instruction = tk.Label(
    root,
    text="Enter your name:",
    font=("Arial", 12)
)

# Entry Field (Input Box)
entry_name = tk.Entry(
    root,
    width=30,
    font=("Arial", 10)
)

# Button
button_submit = tk.Button(
    root,
    text="Submit & Greet",
    command=show_greeting, # Link the button to the function defined above
    bg="Gray", # Background color
    fg="black"      # Foreground (text) color
)

# 4. Place Widgets using the Grid Layout Manager

# Grid is excellent for structured layouts (rows and columns)
# padx/pady add padding around the widget
label_instruction.grid(row=0, column=0, padx=10, pady=10, sticky="w")
entry_name.grid(row=0, column=1, padx=10, pady=10)
button_submit.grid(row=1, column=0, columnspan=2, pady=20) # Span across both columns

# 5. Run the application loop
# This keeps the window open and responsive to user actions
root.mainloop()
